<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		 xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
		 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>BlogApplication</display-name>
  <welcome-file-list>
  <welcome-file>login</welcome-file>
  </welcome-file-list>
  <servlet>
  	<servlet-name>LoginController</servlet-name>
  	<servlet-class>controller.LoginController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>SignupController</servlet-name>
  	<servlet-class>controller.SignupController</servlet-class>
  </servlet>
  <servlet>
  	<description>
  	</description>
  	<display-name>BlogController</display-name>
  	<servlet-name>BlogController</servlet-name>
  	<servlet-class>controller.BlogController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>LoginController</servlet-name>
  	<url-pattern>/LoginController</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>SignupController</servlet-name>
  	<url-pattern>/SignupController</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>BlogController</servlet-name>
  	<url-pattern>/BlogController</url-pattern>
  </servlet-mapping>
</web-app>
